@model DemoModel

@{
    var generator = new Md5Generator();
    var value = Request.QueryString["value"] == null ? "" : Request.QueryString["value"];
}

@Model.GetTypeSummary(typeof(Md5Generator))

<p>@Html.GlobalResource(Resources.Language.EnterValueToHash):</p>

<div class="container input">
  <input type="text" id="txtValue" value="@value" />
  <button>@Html.GlobalResource(Resources.Language.TryItOut)</button>
</div>

<script type="text/javascript">
    $("#txtValue").watermark("@Html.GlobalResource(Resources.Language.EnterValue)");
    $('button').click(function () { location.href = '@Model.PostUrl?value=' + $('#txtValue').val() });
</script>

<p>@Html.GlobalResource(Resources.Language.CodeSample):</p>

<div class="container code">
  <pre>
var generator = new Md5Generator();

generator.GenerateHashValue("@value") => @Json.Encode(generator.GenerateHashValue(value))</pre>
</div>