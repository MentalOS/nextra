@model DemoModel

@{
    var value = Request.QueryString["value"];
    var date = value.IsNullOrEmpty() ? new DateTime() : DateTime.Parse(value);
}

@Model.GetTypeSummary(typeof(DateTimeExtensions))

<p>@Html.GlobalResource(Resources.Language.DateTimeExtensions_WeekComment)</p>

<p>@Html.GlobalResource(Resources.Language.EnterDateTimeToExtend):</p>

<div class="container input">
  <input type="text" id="txtValue" value="@value" />
  <button>@Html.GlobalResource(Resources.Language.TryItOut)</button>
</div>

<script type="text/javascript">
    $("#txtValue").watermark("@Html.GlobalResource(Resources.Language.EnterValue)");
    $('button').click(function () { location.href = '@Model.PostUrl?value=' + $('#txtValue').val() });
</script>

<p>@Html.GlobalResource(Resources.Language.CodeSample):</p>

<div class="container code">
  <pre>
var date = new DateTime("@date.ToString()");

date.ToString()               => @date.ToString()
date.GetFirstDateOfMonth()    => @date.GetFirstDateOfMonth().ToShortDateString()
date.GetFirstDateOfWeek()     => @date.GetFirstDateOfWeek().ToShortDateString()
date.GetLastDateOfMonth()     => @date.GetLastDateOfMonth().ToShortDateString()
date.GetLastDateOfWeek()      => @date.GetLastDateOfWeek().ToShortDateString()
date.GetWeekNumber()          => @date.GetWeekNumber()
date.IsSameDate(DateTime.Now) => @date.IsSameDate(DateTime.Now)</pre>
</div>