@model DemoModel

@{
    var query = Request.QueryString["value"];
    var value = query.IsNullOrEmpty() ? null : new StringCollection { query };
    var iEnumerable = value == null ? new List<string>() : value.AsEnumerable();
}

@Model.GetTypeSummary(typeof(StringCollectionExtensions))

<p>@Html.GlobalResource(Resources.Language.EnterValueToExtendedCollection):</p>

<div class="container input">
  <input type="text" id="txtValue" value="@query" />
  <button>@Html.GlobalResource(Resources.Language.TryItOut)</button>
</div>

<script type="text/javascript">
    $("#txtValue").watermark("@Html.GlobalResource(Resources.Language.EnterValue)");
    $('button').click(function () { location.href = '@Model.PostUrl?value=' + $('#txtValue').val() });
</script>

<p>@Html.GlobalResource(Resources.Language.CodeSample):</p>

<div class="container code">
  <pre>
var value = @(value == null ? Json.Encode(value) : "new StringCollection { " + Json.Encode(query) + " }");
var iEnumerable = value == null ? new List&lt;string&gt;() : value.AsEnumerable();

iEnumerable.Count()   => @iEnumerable.Count();
value.IsNullOrEmpty() => @value.IsNullOrEmpty()</pre>
</div>