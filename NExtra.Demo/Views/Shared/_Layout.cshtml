<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Css/classes.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Css/elements.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Css/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Css/typography.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/Components/jquery.treeview/jquery.treeview.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/Components/jquery-ui-1.8.5.custom/css/ui-lightness/jquery-ui-1.8.5.custom.css")" rel="stylesheet" type="text/css" />
    
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Components/jquery-ui-1.8.5.custom/js/jquery-ui-1.8.5.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Components/jquery.treeview/jquery.treeview.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Components/jquery.watermark-3.0.6/jquery.watermark.min.js")" type="text/javascript"></script>
</head>

<body>
    <div id="main">
		<div id="main-header">
			<div id="main-logo">
				<a href="/">
					<img src="@Url.Content("~/Content/Images/logo.png")" alt=".NET Extensions" />
				</a>
			</div>
		</div>
		
		<div class="box-top one"></div>
		<div id="main-body">
			<div class="columns wide-right fc">
				<div class="left">
					<ul id="main-menu">
                    @foreach (var assembly in ViewBag.MenuItems)
                    {
                        <li>
                            <span>@assembly.Key</span>
                            <ul>
                            @foreach (var type in assembly.Value)
                            {
                                var href = type.FullName.Replace("`1", "");
                                var title = href.Replace(assembly.Key + ".", "");
                                
                                <li class="@(href == ViewBag.Title.ToString() ? "selected" : "")">
                                    <a href="@Url.Content("~/Demo/" + href)" title="@title">
                                        @title
                                    </a>
                                </li>
                            }
							</ul>
                        </li>
                    }
                    </ul>
				</div>

				<div class="right">
					<h1 title="@ViewBag.Title">@ViewBag.Title</h1>
					@RenderBody()
				</div>
			</div>
		</div>
		<div class="box-bottom"></div>
		
		<div>
			<div class="box-top"></div>
			<div class="box">
				© 2009-2011 <a href="http://www.saidi.se" class="em">Daniel Saidi</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
				<a href="http://www.saidi.se/netextensions" class="em">.NET Extension web site</a> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
				<a href="http://code.google.com/p/netextensions" class="em">.NET Extension project site</a>
			</div>
			<div class="box-bottom"></div>
		</div>
	</div>

	<script type="text/javascript">
	    $("#main-menu").treeview();
	</script>
</body>
</html>